<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:maps="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps"
	x:Class="XFGoogleMapSample.BindablePinsSourcePage"
	Title="Pins">

	<ContentPage.Content>

		<StackLayout
			VerticalOptions="Fill"
			Orientation="Vertical">

			<Grid>
				<Grid.RowDefinitions>
			        <RowDefinition Height="Auto" />
			        <RowDefinition Height="Auto" />
			        <RowDefinition Height="Auto" />
			        <RowDefinition Height="Auto" />
			        <RowDefinition Height="Auto" />
			        <RowDefinition Height="Auto" />
			    </Grid.RowDefinitions>
			 
			    <Grid.ColumnDefinitions>
			        <ColumnDefinition Width="Auto" />
			        <ColumnDefinition Width="*" />
			    </Grid.ColumnDefinitions>
				
				<Button x:Name="buttonAddMovablePin"
						Text="Add movable Pin"
						Grid.Row="0"
						Grid.Column="1"/>
				<Button x:Name="buttonRemoveMovablePin"
						Text="Remove pin"
						Grid.Row="0"
						Grid.Column="2"/>

				<Button x:Name="buttonAddPinParis"
						Text="Add pin around Paris"
						Grid.Row="1"
						Grid.Column="1"/>
				<Button x:Name="buttonRemovePinParis"
						Text="Remove pin"
						Grid.Row="1"
						Grid.Column="2"/>

				<Button x:Name="buttonClearPins"
						Text="Clear Pins"
						Grid.Row="2"
						Grid.Column="1"
						Grid.ColumnSpan="2" />
				
				<Label x:Name="labelStatus"
						Text="Show status when Pin selected."
						Grid.Row="5"
						Grid.Column="1"
						Grid.ColumnSpan="2" />
				
			</Grid>			
			<maps:Map x:Name="map" PinsSource="{Binding Pins}" MapRegion="{Binding MapRegion}"
					VerticalOptions="FillAndExpand"/>
			
		</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
